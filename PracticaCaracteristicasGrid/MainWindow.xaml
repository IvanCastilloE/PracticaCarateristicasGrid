<Window x:Class="PracticaCaracteristicasGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaCaracteristicasGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0">Bototastico 1</Button>
        <Button Grid.Column="1" Grid.Row="0">Bototastico 2</Button>
        <Button Grid.Column="2" Grid.Row="0">Bototastico 3</Button>
        <Button Grid.Column="3" Grid.Row="0">Bototastico 4</Button>
        <Button Grid.Column="0" Grid.Row="1">Bototastico 5</Button>
        <Button Grid.Column="1" Grid.Row="1">Bototastico 6</Button>
        <Button Grid.Column="2" Grid.Row="1">Bototastico 7</Button>
        <Button Grid.Column="3" Grid.Row="1">Bototastico 8</Button>
        <Button Grid.Column="0" Grid.Row="2" Grid.RowSpan="2">Bototastico 9</Button>
        <Button Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="2">Bototastico 10</Button>
    </Grid>
</Window>
